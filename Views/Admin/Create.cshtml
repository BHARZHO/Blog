@model BlogApp.ViewModels.BlogViewModel.CreateBlogViewModel

@{
    ViewData["Title"] = "Create New Post";
}

<form method="post">
    <div class="mb-3">
        <label asp-for="BlogName" class="form-label"></label>
        <input asp-for='BlogName' type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
        <label asp-for="Body" class="form-label"></label>
        <textarea id="" cols="30" rows="2" asp-for="Body"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">
        Create Blog
    </button>
</form>