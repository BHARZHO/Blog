

@model BlogApplication.ViewModels.BlogViewModel.DeleteBlogViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Blog Post</h1>

<h3>Are you sure you want to delete this post?</h3>

<div>
    <h4>@Model.Name</h4>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        @* <input  type="button" asp-action="Delete" value="Delete" class="btn btn-danger" /> *@
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Cancel</a>
        <button type="submit"  class="btn btn-danger">Delete</button>

    </div>
</form>
